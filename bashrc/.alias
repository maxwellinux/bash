alias cp="cp -iv"        # confirm before overwriting
alias d='du -h -d1'
alias free='free -m'

alias l='ls -lA'    # show files in long foramt
alias la='cd ..'    # last fold
alias e='exit'
alias cl='clear'

alias b='cd $BASH_DIR'
alias .v="cd ~/.vim"

alias sb='source ~/.bashrc'

alias vimb='vim ~/.bashrc'
alias vima='vim $BASH_DIR/bashrc/.alias'
alias vimr='vim ~/.vim/vimrc'

alias 'tipgit'='cat $BASH_DIR/alias/tip_git.txt'
alias 'tippdftk'='cat $BASH_DIR/alias/tip_pdftk.txt'
alias 'tipconvert'='cat $BASH_DIR/alias/tip_convert.txt'
alias 'tipchromium'='cat $BASH_DIR/alias/tip_chromium.txt'
